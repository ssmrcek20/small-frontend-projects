<div class="images">
    <div class="container">
        <div class="arrow left">
            <svg width="16" height="18" xmlns="http://www.w3.org/2000/svg"><path d="M11 1 3 9l8 8" stroke="#1D2026" stroke-width="4" fill="none" fill-rule="evenodd"/></svg>
        </div>
        <img class="product" src="/image-product-1.jpg" alt="">
        <img class="product" src="/image-product-2.jpg" alt="">
        <img class="product" src="/image-product-3.jpg" alt="">
        <img class="product" src="/image-product-4.jpg" alt="">
        <div class="arrow right">
            <svg width="13" height="18" xmlns="http://www.w3.org/2000/svg"><path d="m2 1 8 8-8 8" stroke="#1D2026" stroke-width="4" fill="none" fill-rule="evenodd"/></svg>    
        </div>
    </div>
</div>

<script>
changeImage(0);

const nextRight = document.querySelector('.arrow.right') as HTMLElement;
if(nextRight){
    nextRight.addEventListener('click', () => changeImage(1));
}
const nextLeft = document.querySelector('.arrow.left') as HTMLElement;
if(nextLeft){
    nextLeft.addEventListener('click', () => changeImage(-1));
}

function changeImage(n: number){
    let images = document.querySelectorAll('.product') as NodeListOf<HTMLElement>;
    let index = 0;
    images.forEach((image, i) => {
        if(image.style.display === 'block'){
            index = i;
        }
    });
    images[index].style.display = 'none';
    index += n;
    if(index === images.length){
        index = 0;
    }
    if(index === -1){
        index = images.length - 1;
    }
    images[index].style.display = 'block';
}
</script>

<style>
    .container {
        height: 19rem;
        overflow: hidden;
        position: relative;
    }
    .arrow {
        position: absolute;
        top: calc(50% - 1.2rem);
        z-index: 1;
        cursor: pointer;
        background: var(--white);
        border-radius: 100rem;
        width: 2.4rem;
        height: 2.4rem;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        stroke: #1D2026;
    }
    .arrow:hover {
        stroke: var(--orange);
    }
    svg{
        scale: .8;
        stroke: inherit;
    }
    svg path {
        stroke: inherit;
        transition: stroke .2s ease-in-out;
    }
    .arrow.left {
        left: 1rem;
    }
    .arrow.right {
        right: 1rem;
    }
    .product {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        display: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -o-user-select: none;
        user-select: none;
    }
</style>