<div class="description">
    <h2>Sneaker Company</h2>
    <h1>Fall Limited Edition Sneakers</h1>
    <p>
        These low-profile sneakers are your perfect casual wear companion.
        Featuring a durable rubber outer sole, theyâ€™ll withstand everything the
        weather can offer.
    </p>
    <div class="price">
        <div class="new-price">$125.00</div>
        <div class="cut-precentae">50%</div>
        <div class="divider"></div>
        <div class="old-price">$250.00</div>
    </div>
    <div class="amount">
        <img class="amount-button" src="/icon-minus.svg" alt="" />
        <div class="number">0</div>
        <img class="amount-button" src="/icon-plus.svg" alt="" />
    </div>
    <button>
        <svg
            class="cart"
            width="22"
            height="20"
            xmlns="http://www.w3.org/2000/svg"
            ><path
                d="M20.925 3.641H3.863L3.61.816A.896.896 0 0 0 2.717 0H.897a.896.896 0 1 0 0 1.792h1l1.031 11.483c.073.828.52 1.726 1.291 2.336C2.83 17.385 4.099 20 6.359 20c1.875 0 3.197-1.87 2.554-3.642h4.905c-.642 1.77.677 3.642 2.555 3.642a2.72 2.72 0 0 0 2.717-2.717 2.72 2.72 0 0 0-2.717-2.717H6.365c-.681 0-1.274-.41-1.53-1.009l14.321-.842a.896.896 0 0 0 .817-.677l1.821-7.283a.897.897 0 0 0-.87-1.114ZM6.358 18.208a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm10.015 0a.926.926 0 0 1 0-1.85.926.926 0 0 1 0 1.85Zm2.021-7.243-13.8.81-.57-6.341h15.753l-1.383 5.53Z"
                fill="#fff"
                fill-rule="nonzero"></path></svg
        >
        Add to cart
    </button>

    <div class="warning">Please select quantity!</div>
</div>

<script>
    let amount = document.querySelector(".number") as HTMLElement;
    let number = 0;

    const plus = document.querySelector(
        ".amount-button:nth-child(3)"
    ) as HTMLElement;
    if (plus) {
        plus.addEventListener("click", () => {
            if (amount) {
                number += 1;
                amount.textContent = number.toString();
            }
        });
    }

    const minus = document.querySelector(
        ".amount-button:nth-child(1)"
    ) as HTMLElement;
    if (minus) {
        minus.addEventListener("click", () => {
            if (amount) {
                number -= 1;
                if (number < 0) number = 0;
                amount.textContent = number.toString();
            }
        });
    }

    const button = document.querySelector("button") as HTMLElement;
    const warning = document.querySelector(".warning") as HTMLElement;
    const item = {
        name: "Fall Limited Edition Sneakers",
        price: 125.00,
        amount: 0,
    };

    if (button) {
        button.addEventListener("click", () => {
            if (number > 0) {
                warning.style.display = "none";
                item.amount = number;
                window.localStorage.setItem("item", JSON.stringify(item));
            } else {
                warning.style.display = "block";
            }
        });
    }
</script>

